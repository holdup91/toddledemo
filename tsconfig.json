{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["functions/**/*"]
}
